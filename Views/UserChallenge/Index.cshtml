@model IEnumerable<Challenges.Models.UserChallenge>

@{
    ViewData["Title"] = "Assigned Challenges";
}

<h2 class="fw-semibold text-secondary">Assigned Challenges</h2>

<p>
    <a asp-action="Assign" class="btn btn-outline-primary rounded-pill"><i class="bi bi-plus-lg"></i> Assign New Challenge</a>
</p>

<div class="container-fluid">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Assigned Challenge</th>
                <th>Date Assigned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User?.Username</td>
                    <td>@item.Challenge?.Title</td>
                    <td>@item.AssignedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="Delete" asp-route-userId="@item.UserId" asp-route-challengeId="@item.ChallengeId" method="post">
                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to un-assign this challenge?')"><i class="bi bi-trash3"></i> Un-assign</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>