@model UserChallenge
@{
    ViewData["Title"] = "Assign Challenge";
}

<h2 class="fw-semibold text-secondary">Assign Challenge</h2>
<hr />
<div class="container-fluid">
    <form asp-action="Assign" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserId" class="control-label mb-1">Select User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChallengeId" class="control-label mb-1">Select Challenge to Assign</label>
                    <select asp-for="ChallengeId" class="form-control" asp-items="ViewBag.Challenges">
                        <option value="">-- Select Challenge --</option>
                    </select>
                    <span asp-validation-for="ChallengeId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary rounded-pill">Assign Challenge</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
        </div>
    </form>
</div>