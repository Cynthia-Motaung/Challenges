@model Progress
@{
    ViewData["Title"] = "Create Progress Update";
}

<h2 class="fw-semibold text-secondary">Create Progress Update</h2>
<hr />
<div class="container-fluid">
    <form asp-action="Create" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserId" class="control-label mb-1">User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChallengeId" class="control-label mb-1">Challenge</label>
                    <select asp-for="ChallengeId" class="form-control" asp-items="ViewBag.Challenges">
                        <option value="">-- Select Challenge --</option>
                    </select>
                    <span asp-validation-for="ChallengeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProgressPercentage" class="control-label mb-1">Progress Percentage</label>
                    <input asp-for="ProgressPercentage" class="form-control" type="number" min="0" max="100" />
                    <span asp-validation-for="ProgressPercentage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProgressDetails" class="control-label mb-1">Notes</label>
                    <textarea asp-for="ProgressDetails" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="ProgressDetails" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary rounded-pill">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
        </div>
    </form>
</div>