@model Profile
@{
    ViewBag.Title = "Create Profile";
}

<h2 class="fw-semibold text-secondary">Create Profile</h2>
<div class="container-fluid">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label mb-1">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label mb-1">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label mb-1">Date Of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date"/>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicture" class="control-label mb-1">Image</label>
                    <input asp-for="ProfilePicture" class="form-control" />
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label mb-1">User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary rounded-pill">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
        </div>
    </form>
</div>
