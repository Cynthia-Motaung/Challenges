@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
}

<h2 class="fw-semibold text-secondary">Users</h2>
<a asp-action="Create" class="btn btn-outline-primary rounded-pill mr-1"><i class="bi bi-plus-lg"></i> New</a>
<div class="container-fluid">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id"  class="btn btn-outline-success btn-sm"><i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>