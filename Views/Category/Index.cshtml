@model IEnumerable<Category>
@{
    ViewBag.Title = "Categories";
}

<h2 class="fw-semibold text-secondary">Categories</h2>
<a asp-action="Create" class="btn btn-outline-primary rounded-pill mr-1"><i class="bi bi-plus-lg"></i> New</a>
    <div class="container-fluid">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.CategoryName</td>
                        <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-success btn-sm"><i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
    </div>