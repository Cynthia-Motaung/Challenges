@model Category
@{
    ViewBag.Title = "Edit Category";
}

<h2 class="fw-semibold text-secondary">Edit Category</h2>
<div class="container-fluid">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label mb-1">Category</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success rounded-pill">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
                </div>
            </form>
        </div>
     </div>
</div>
