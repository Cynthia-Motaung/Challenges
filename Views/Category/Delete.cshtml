@model Category
@{
        ViewBag.Title = "Confirm Category";

}

<h2 class="fw-semibold text-secondary">Confirm Category</h2>
<div class="alert alert-danger" role="alert">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <p>Are you sure you want to delete the category <strong class="text-danger">@Model.CategoryName</strong>?</p>
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger rounded-pill">Yes, Delete</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">No, Cancel</a>
                </div>
            </form>
        </div>
   </div>
</div>
