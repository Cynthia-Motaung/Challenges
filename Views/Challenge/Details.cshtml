@model Challenge
@{
    ViewData["Title"] = "Challenge Details";
}

<h2 class="fw-semibold text-secondary">Challenge Details</h2>
<div class="container-fluid">
    <div>
        <h4>@Model.Title</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Model.Category?.CategoryName
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @Model.StartDate.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                End Date
            </dt>
            <dd class="col-sm-10">
               @Model.EndDate.ToString("dd/MM/yyyy") 
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Model.ChallengeStatus
            </dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill">Edit</a>
   <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
</div>
